# screenrc

# main options
altscreen on
attrcolor b ".I"
autodetach on
bell_msg '^Gbell in window %n...'
bufferfile "$HOME/.screen/exchange"
deflogin on
defbce on
defflow off
defscrollback 5000
defutf8 on
encoding UTF-8
hardcopydir "$HOME/.screen/hardcopy"
nonblock on
setenv LC_CTYPE en_US.UTF-8
shelltitle '/ |bash'
startup_message off
term xterm-256color
vbell off

# display settings
sorendition '= dY'
hardstatus alwayslastline '%{= B}//%{= W}%H%{= B}/%{= W}%n%{= B}/%{= W}%t %= %{= B}//%{= W}%d %M %C%{= B}//'

# special xterm hardstatus: use the window title.
#termcapinfo xterm-256color 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
#hardstatus string "[screen %n%?: %t%?] %h"

# open environment-specific apps
source "$SCREEN_CONF_DIR/$SCREEN_CONF"

# always open some terms
screen
screen
screen
select 0

# keybindings
bindkey -k F2 next
bindkey -k F1 prev

# remove some stupid / dangerous key bindings
bind ^k
bind ^\

# make them better
bind Q quit
bind K kill
bind } history

# find the nearest shell
bind s select bash 

# make scroll work
termcapinfo rxvt-256color ti@:te@
termcapinfo xterm-256color ti@:te@

# make colors work
termcapinfo xterm-256color 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
termcapinfo rxvt-256color 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
